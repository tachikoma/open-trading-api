# 프로젝트 루트용 샘플 .env 파일
# 이 파일을 프로젝트 루트(open-trading-api/.env)에 위치시키세요.
# 우선순위: 시스템 환경변수 > .env 파일 > 코드 내 기본값

# ENV_MODE: "real" 은 실전(프로덕션), "demo" 는 모의(페이퍼) 트레이딩
ENV_MODE=demo

# TRADING_ENABLED: 실제 주문을 활성화하려면 true로 설정
# 허용 값: true/false, 1/0, yes/no (대소문자 무시)
TRADING_ENABLED=true

# 텔레그램 알림 설정 (기본 비활성)
# 1: 활성, 0: 비활성
TELEGRAM_ENABLED=0
# BotFather에서 발급받은 텔레그램 봇 토큰 (예: 123456:ABCDefGhI_jklMNopQRs)
TELEGRAM_BOT_TOKEN=""
# 알림을 받을 채팅 ID (그룹 채팅 ID는 음수 예: -777777777)
TELEGRAM_CHAT_ID=""
# 텔레그램 요청 타임아웃(초)
TELEGRAM_TIMEOUT_SEC=3

# 종목명 매핑 CSV가 있는 디렉토리 (symbols_*.csv 파일을 로드)
SYMBOL_MAP_DIR="trading_bot/data"

# --- logging defaults for trading_bot ---
# 통합 로그 파일 경로 (리포 루트 기준)
LOG_FILE=trading_bot/logs/app.log
# 로그 회전: 최대 바이트(기본 10MiB)
LOG_MAX_BYTES=10485760
# 보관할 백업 파일 수 (기본 10)
LOG_BACKUP_COUNT=10
# 로그 레벨
LOG_LEVEL=INFO
